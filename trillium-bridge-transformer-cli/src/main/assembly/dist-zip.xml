<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>*:war</include>
            </includes>
            <outputDirectory>/webapp</outputDirectory>
        </dependencySet>

        <dependencySet>
            <unpack>true</unpack>
            <includes>
                <include>edu.mayo:trillium-bridge-transformer-core:zip:xslts</include>
            </includes>
            <outputDirectory>/conf</outputDirectory>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>src/main/app</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/app/${project.build.finalName}</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>755</fileMode>
        </fileSet>

    </fileSets>
</assembly>